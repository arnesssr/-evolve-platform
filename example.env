# Example .env for -evolve-platform
# Copy this file to ".env" and fill in values.
# Do NOT commit your real .env file.

# --- SMSLeopard ---
SMSLEOPARD_ENVIRONMENT=development
SMSLEOPARD_API_KEY={{SMSLEOPARD_API_KEY}}
SMSLEOPARD_API_SECRET={{SMSLEOPARD_API_SECRET}}
SMSLEOPARD_ACCESS_TOKEN={{SMSLEOPARD_ACCESS_TOKEN}}

# --- Pesapal ---
# Default in settings.py points to Pesapal QA; set production URL in prod environments.
PESAPAL_BASE_URL=https://cybqa.pesapal.com/pesapalv3
PESAPAL_CONSUMER_KEY={{PESAPAL_CONSUMER_KEY}}
PESAPAL_CONSUMER_SECRET={{PESAPAL_CONSUMER_SECRET}}
PESAPAL_SANDBOX=true

# --- Database ---
# Leave DATABASE_URL empty to use local SQLite (default in settings.py).
# Example Postgres URL:
# postgres://USER:PASS@HOST:5432/DBNAME?sslmode=require
DATABASE_URL=
# Optional CA cert to verify DB server certificate.
# If you downloaded Aiven's CA locally, set this to its path.
# If unset and config/aiven-ca.pem exists, settings.py will use that file.
# DB_SSLROOTCERT=config/aiven-ca.pem

# --- Email (SMTP) ---
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER={{EMAIL_USER}}
EMAIL_HOST_PASSWORD={{EMAIL_PASSWORD}}

