# Production environment example (.env.production)
# Copy values into your production environment variables manager.
# Do NOT commit real secrets!

# Core Django
DEBUG=false
SECRET_KEY={{GENERATE_A_STRONG_SECRET}}
ALLOWED_HOSTS=your.domain.com

# Database (Aiven Postgres)
# Example DSN (replace placeholders with your real values)
DATABASE_URL=postgres://{{DB_USER}}:{{DB_PASSWORD}}@{{DB_HOST}}:{{DB_PORT}}/{{DB_NAME}}?sslmode=require
# Optional: if you store the Aiven CA locally in the container or host
# DB_SSLROOTCERT=config/aiven-ca.pem

# Email (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER={{SMTP_USER}}
EMAIL_HOST_PASSWORD={{SMTP_PASSWORD}}

