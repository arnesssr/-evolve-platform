# Example environment variables for Evolve Platform (do not commit real secrets)

# Django
SECRET_KEY=
DEBUG=false
ALLOWED_HOSTS=your-domain.com

# Database
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Pesapal
# Base URL: sandbox or production
# Sandbox: https://cybqa.pesapal.com/pesapalv3
# Prod:    https://pay.pesapal.com/v3
PESAPAL_BASE_URL=
PESAPAL_CONSUMER_KEY=
PESAPAL_CONSUMER_SECRET=
# IPN Notification ID issued by Pesapal when you register your IPN URL
PESAPAL_NOTIFICATION_ID=
# Optional label or branch name recognized by your Pesapal account
PESAPAL_BRANCH=

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=no-reply@your-domain.com

